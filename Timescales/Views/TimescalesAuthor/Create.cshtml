@model Timescales.Models.Timescale

@{
    ViewData["Title"] = "Create";
    ViewData["Header"] = "authorTimescalesEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-muted">Create Timescale</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placeholder" class="control-label"></label>
                <input asp-for="Placeholder" class="form-control" />
                <span asp-validation-for="Placeholder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owners" class="control-label"></label>
                <input asp-for="Owners" class="form-control" />
                <span asp-validation-for="Owners" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Basis" class="control-label"></label>
                <select asp-for="Basis" class="form-control">
                    <option value="Working">Working</option>
                    <option value="Calendar">Calendar</option>
                    <option value="Notbh">Notbh</option>
                </select>
                <span asp-validation-for="Basis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site" class="control-label"></label>
                <select asp-for="Site" class="form-control">
                    <option value="CSTD">CSTD</option>
                    <option value="CSG">CSG</option>
                    <option value="CCG">CCG</option>
                </select>
                <span asp-validation-for="Site" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LineOfBusiness" class="control-label"></label>
                <input asp-for="LineOfBusiness" class="form-control" />
                <span asp-validation-for="LineOfBusiness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldestWorkDate" class="control-label"></label>
                <input asp-for="OldestWorkDate" class="form-control" />
                <span asp-validation-for="OldestWorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Days" class="control-label"></label>
                <input asp-for="Days" class="form-control" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
                <div class="text-danger">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
